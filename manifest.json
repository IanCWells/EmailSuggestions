{
    "manifest_version": 3,
    "name": "Email Draft Suggestion",
    "version": "1.0",
    "permissions": ["activeTab", "storage", "scripting", "tabs"],
    "description": "A Chrome extension to suggest drafts for email replies.",
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["https://mail.google.com/*"],
        "js": ["popup.js"]
      }
    ]
  }
  